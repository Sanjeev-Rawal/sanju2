{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
 "routes": [
  // 1) Static file lookup: if the file exists in dist/public, Vercel will send it.
  { "handle": "filesystem" },

  // 2) API routes: anything under /api/ goes to your serverless function
  { "src": "/api/(.*)", "dest": "server/index.ts" },

  // 3) SPA fallback: everything else returns index.html
  { "src": "/(.*)",     "dest": "dist/public/index.html" }
]

}
